@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Groups I Own</div>
                <div class="card-body">
                    <h5 class="card-title">@ViewData["GroupCount"]</h5>
                    <p class="card-text">Total number of groups I owned.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Total Applications</div>
                <div class="card-body">
                    <h5 class="card-title">@ViewData["AppCount"]</h5>
                    <p class="card-text">Total number of Application in the Tenant.</p>
                </div>
            </div>
        </div>


        <style>
            .card-header {
                color:white !important;
            }

            .card-title{
                color: white !important;
            }
        </style>